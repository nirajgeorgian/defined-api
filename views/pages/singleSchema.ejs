<% include ../partials/_header %>
<% include ../partials/_navbar.ejs %>
<div class="row justify-content-center">
  <div class="col-sm-6 col-md-6">
    <h4 class="text-center">Your defined schema is <small class="text-muted"><%= name %></small></h4>
    <hr>
    <p class="text-center">For your defined schema the following collections are available :</p>
    <form class="#" action="/user/api/<%= name %>/<%= id %>" method="post" id="singleSchemaForm">
      <% for(var key in schemaData) { %>
        <% if(key == 'schema') { %>
          <div class="form-group row justify-content-center">
            <label for="<%= key %>" class="col-sm-3 col-md-3 col-form-label"><%= key %></label>
            <div class="col-sm-6 col-md-6">
              <input type="text" class="form-control schema-input" placeholder="<%= key %>" name='<%= key %>' id="<%= key %>" value='<%= name %>'>
            </div>
          </div>
        <% } else if (key == '_id'){ %>
          <input type="hidden" class="form-control schema-input" name="newId" value="<%= id %>" id="<%= id %>">
        <% } else { %>
          <div class="form-group row justify-content-center">
            <label for="<%= key %>" class="col-sm-3 col-md-3 col-form-label"><%= key %></label>
            <div class="col-sm-6 col-md-6">
              <input type="text" class="form-control schema-input" placeholder="<%= key %>" name='<%= key %>' id="<%= key %>">
            </div>
          </div>
        <% } %>
      <% } %>
      <button class="btn btn-primary" type="submit" id="singleSchema">Submit</button>
    </form>
  </div>
</div>
<% include ../partials/_footer %>
